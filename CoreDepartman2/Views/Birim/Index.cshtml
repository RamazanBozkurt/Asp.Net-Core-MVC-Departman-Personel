
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutTest.cshtml";
}

@model List<CoreDepartman2.Models.Birim>

<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Birim</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var birim in Model)
        {
            <tr>
                <td>@birim.Id</td>
                <td>@birim.Ad</td>
                <td><a href="/Birim/BirimSil/@birim.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Birim/BirimGetir/@birim.Id" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Birim/Detaylar/@birim.Id" class="btn btn-primary">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Birim/YeniBirim" class="btn btn-warning">Yeni Birim</a>



